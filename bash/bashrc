# Bash configuration file
# This file is sourced by bash for non-login shells

# Source shared aliases
if [[ -f ~/.dotfiles/shared/aliases ]]; then
    source ~/.dotfiles/shared/aliases
fi

# Source bash-specific aliases
if [[ -f ~/.dotfiles/bash/aliases ]]; then
    source ~/.dotfiles/bash/aliases
fi

# Source prompt configuration
if [[ -f ~/.dotfiles/bash/prompt ]]; then
    source ~/.dotfiles/bash/prompt
fi

# Source NVM configuration
if [[ -f ~/.dotfiles/shared/nvm ]]; then
    source ~/.dotfiles/shared/nvm
fi

# Source local configuration if it exists
if [[ -f ~/.localrc ]]; then
    source ~/.localrc
fi

# Bash-specific configuration can be added here 