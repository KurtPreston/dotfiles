# Shared aliases file
# This file contains aliases that work across bash, zsh, and fish
# Source this file from your shell-specific configuration

# git aliases
alias g='git'
alias ga='git add'
alias gb='git branch'
alias gc='git commit'
alias gco='git checkout'
alias gd='git diff'
alias gdc='git diff --cached'
alias gs='git status'
alias gl='git log --oneline'
alias gsi='git stash-index'

# git branch clean aliases
alias gbc='git-branch-clean'
alias gbcl='git-branch-clean-local'
alias gbcr='git-branch-clean-remote'

# ls aliases
alias l='ls -al'